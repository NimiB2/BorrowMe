<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".logIns.LoginActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_size"
        android:textSize="@dimen/big_title_size"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:text="@string/welcome" />

    <androidx.cardview.widget.CardView
        android:id="@+id/LogIn_CARD_logIn"
        android:layout_width="@dimen/card_width"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="@dimen/general_dimension"
        app:cardElevation="@dimen/general_dimension"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/general_dimension"
            android:background="@drawable/custom_edittext"
            >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/LogIn_MTV_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/log_in"
                android:layout_gravity="center"
                android:textSize="@dimen/login_title_size"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                />
            <EditText
                android:id="@+id/LogIn_ET_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="@dimen/margin_size"
                android:layout_marginHorizontal="@dimen/small_general_size"
                android:padding="@dimen/small_general_size"
                android:hint="@string/email"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="@dimen/small_general_size"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                android:importantForAutofill="no"
               >
            </EditText>

            <EditText
                android:id="@+id/LogIn_ET_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="@dimen/general_dimension"
                android:layout_marginHorizontal="@dimen/small_general_size"
                android:padding="@dimen/small_general_size"
                android:hint="@string/password"
                android:drawableLeft="@drawable/lock"
                android:drawablePadding="@dimen/small_general_size"
                android:textColor="@color/black"
                tools:ignore="TextFields"
                android:inputType="textPassword"
                android:importantForAutofill="no">
            </EditText>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/LogIn_BTN_LOGIN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/top_margin"
                android:text="@string/log_in_caps"
                android:textColor="@color/white"
                android:textSize="@dimen/button_text_size"
                android:backgroundTint="@color/text_color"
                >
            </com.google.android.material.button.MaterialButton>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/small_margin_top"
                android:layout_gravity="center">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/LogIn_MTV_notRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/not_registered_yet"
                    android:textColor="@color/black"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/LogIn_MTV_singUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/small_general_size"
                    android:text="@string/sign_up_caps"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>


</RelativeLayout>